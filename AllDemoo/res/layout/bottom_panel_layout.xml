<?xml version="1.0" encoding="utf-8"?>
<com.lonely.view.BottomControl xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
    android:gravity="center_vertical"
     >

    <com.lonely.view.ImageText
        android:id="@+id/btn_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

     <com.lonely.view.ImageText
        android:id="@+id/btn_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_one" />
    
    <com.lonely.view.ImageText
        android:id="@+id/btn_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_two" />
</com.lonely.view.BottomControl>